{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}